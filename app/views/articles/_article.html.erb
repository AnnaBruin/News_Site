     <div class="post">
        <div class="post-head">
            <h2><%= link_to article.title, article %></h2>
            <small>
              <time> <%= article.created_at.to_date.strftime("%d %B, %Y") %></time>
              <% if signed_in?%>
              |
              <%= link_to "Изменить", edit_article_path(article) %>
              |
              <%= link_to "Удалить", article_path(article), data: {
                                turbo_method: :delete,
                                turbo_confirm: "Вы уверены?"
                              } %>
              <% end %>
            </small>
        </div> 
        
        <div class="post-summary"> 
          <div class="clearfix"> 
            <%= article.summary %>
          </div>
        </div>

      </div>