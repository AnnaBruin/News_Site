
<div class="row">
    <div class="col-md-9">
    <h1><%= t('articles.index.title') %></h1>
    Количество статей: <%= Article.public_count %>
    </div>

    <div class="col-md-3">

      <div class="tag_clound">
        <h2>Теги</h2>
        <% tag_cloud(Tag.counts, %w{tag1 tag2 tag3 tag4 tag5}) do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div>
    </div>
</div>

<section id='articles'>
  <%= render @articles %>
</section>
